{% extends 'base.html.twig' %}

{% block title %}
Article
{% endblock %}

{% block body %}
	<div>
		<h1>{{ article.getTitle() }}</h1>

		{{ article.afficherArticle() }}

		<h2>Commentaires</h2>
		
        {# Comment form #}
        {{ form(commentForm) }}
        
		{# List des commentaires #}
		<ul class="uk-comment-list">
			<li>
				{% for comment in article.getCommentList() %}
                <div class="eni-comment-wrapper">
					<article class="uk-comment">
						<header class="uk-comment-header">
							<div class="uk-grid-medium uk-flex-middle" uk-grid>
								<div class="uk-width-auto">
									<img class="uk-comment-avatar" src="https://i.pravatar.cc/150?u=a042581f4e29026704d" width="80" height="80" alt="">
								</div>
								<div class="uk-width-expand">
									<h4 class="uk-comment-title uk-margin-remove">
										<a class="uk-link-reset" href="#">Author</a>
									</h4>
									<ul class="uk-comment-meta uk-subnav uk-subnav-divider uk-margin-remove-top">
										<li>
											<a href="#">12 days ago</a>
										</li>
									</ul>
								</div>
							</div>
						</header>
						<div class="uk-comment-body">
							<p>{{ comment.message }}</p>
						</div>
					</article>
                    </div>
				{% endfor %}
			</li>
		</ul>

	</div>
{% endblock %}
